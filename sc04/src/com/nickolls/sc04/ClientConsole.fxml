<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox prefHeight="283.0" prefWidth="664.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nickolls.sc04.ClientConsoleController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="319.0" prefWidth="654.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="273.0" prefWidth="654.0" spacing="10.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="640.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txtFld_alias" promptText="Alias" />
                        <TextField fx:id="txtFld_address" promptText="Address" />
                        <TextField fx:id="txtFld_port" promptText="Port" />
                        <Button fx:id="btn_joinServer" mnemonicParsing="false" onAction="#handleJoinServer" prefHeight="25.0" prefWidth="82.0" text="Join Server" />
                     </children>
                  </HBox>
                  <ScrollPane>
                     <content>
                        <TextFlow fx:id="txtFlow_console" prefHeight="200.0" prefWidth="627.0" />
                     </content>
                  </ScrollPane>
                  <HBox prefHeight="25.0" prefWidth="634.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txtFld_message" prefHeight="25.0" prefWidth="589.0" />
                        <Button fx:id="btn_send" mnemonicParsing="false" onAction="#handleSendMessage" prefHeight="25.0" prefWidth="61.0" text="Send" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
    </AnchorPane>
  </children>
</VBox>
